<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- Months -->
    <record id="monthly_jan" model="config.filter">
        <field name="name">January</field>
        <field name="month_int">1</field>
        <field name="type">monthly</field>
    </record>
    <record id="monthly_feb" model="config.filter">
        <field name="name">February</field>
        <field name="month_int">2</field>
        <field name="type">monthly</field>
    </record>
    <record id="monthly_mar" model="config.filter">
        <field name="name">March</field>
        <field name="month_int">3</field>
        <field name="type">monthly</field>
    </record>
    <record id="monthly_apr" model="config.filter">
        <field name="name">April</field>
        <field name="month_int">4</field>
        <field name="type">monthly</field>
    </record>
    <record id="monthly_may" model="config.filter">
        <field name="name">May</field>
        <field name="month_int">5</field>
        <field name="type">monthly</field>
    </record>
    <record id="monthly_june" model="config.filter">
        <field name="name">June</field>
        <field name="month_int">6</field>
        <field name="type">monthly</field>
    </record>
    <record id="monthly_jul" model="config.filter">
        <field name="name">July</field>
        <field name="month_int">7</field>
        <field name="type">monthly</field>
    </record>
    <record id="monthly_aug" model="config.filter">
        <field name="name">August</field>
        <field name="month_int">8</field>
        <field name="type">monthly</field>
    </record>
    <record id="monthly_sept" model="config.filter">
        <field name="name">September</field>
        <field name="month_int">9</field>
        <field name="type">monthly</field>
    </record>
    <record id="monthly_oct" model="config.filter">
        <field name="name">October</field>
        <field name="month_int">10</field>
        <field name="type">monthly</field>
    </record>
    <record id="monthly_nov" model="config.filter">
        <field name="name">November</field>
        <field name="month_int">11</field>
        <field name="type">monthly</field>
    </record>
    <record id="monthly_dec" model="config.filter">
        <field name="name">December</field>
        <field name="month_int">12</field>
        <field name="type">monthly</field>
    </record>

    <!-- Quarters -->
    <record id="quarter_1" model="config.filter">
        <field name="name">Q1</field>
        <field name="type">quarter</field>
        <field name="quarter_sequence">1</field>
    </record>
    <record id="quarter_2" model="config.filter">
        <field name="name">Q2</field>
        <field name="type">quarter</field>
        <field name="quarter_sequence">2</field>
    </record>
    <record id="quarter_3" model="config.filter">
        <field name="name">Q3</field>
        <field name="type">quarter</field>
        <field name="quarter_sequence">3</field>
    </record>
    <record id="quarter_4" model="config.filter">
        <field name="name">Q4</field>
        <field name="type">quarter</field>
        <field name="quarter_sequence">4</field>
    </record>


    <!-- QUARTER MONTH -->
    <record id="quarter1_month_jan" model="config.filter.line">
        <field name="month" ref="monthly_jan"/>
        <field name="config_filter_id" ref="quarter_1"/>
    </record>
    <record id="quarter1_month_feb" model="config.filter.line">
        <field name="month" ref="monthly_feb"/>
        <field name="config_filter_id" ref="quarter_1"/>
    </record>
    <record id="quarter1_month_mar" model="config.filter.line">
        <field name="month" ref="monthly_mar"/>
        <field name="config_filter_id" ref="quarter_1"/>
    </record>

    <record id="quarter2_month_jan" model="config.filter.line">
        <field name="month" ref="monthly_apr"/>
        <field name="config_filter_id" ref="quarter_2"/>
    </record>
    <record id="quarter2_month_feb" model="config.filter.line">
        <field name="month" ref="monthly_may"/>
        <field name="config_filter_id" ref="quarter_2"/>
    </record>
    <record id="quarter2_month_mar" model="config.filter.line">
        <field name="month" ref="monthly_june"/>
        <field name="config_filter_id" ref="quarter_2"/>
    </record>

    <record id="quarter3_month_jan" model="config.filter.line">
        <field name="month" ref="monthly_jul"/>
        <field name="config_filter_id" ref="quarter_3"/>
    </record>
    <record id="quarter3_month_feb" model="config.filter.line">
        <field name="month" ref="monthly_aug"/>
        <field name="config_filter_id" ref="quarter_3"/>
    </record>
    <record id="quarter3_month_mar" model="config.filter.line">
        <field name="month" ref="monthly_sept"/>
        <field name="config_filter_id" ref="quarter_3"/>
    </record>

    <record id="quarter4_month_jan" model="config.filter.line">
        <field name="month" ref="monthly_oct"/>
        <field name="config_filter_id" ref="quarter_4"/>
    </record>
    <record id="quarter4_month_feb" model="config.filter.line">
        <field name="month" ref="monthly_nov"/>
        <field name="config_filter_id" ref="quarter_4"/>
    </record>
    <record id="quarter4_month_mar" model="config.filter.line">
        <field name="month" ref="monthly_dec"/>
        <field name="config_filter_id" ref="quarter_4"/>
    </record>
    </data>
    
</odoo>
