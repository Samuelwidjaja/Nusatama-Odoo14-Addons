<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="paperformat_purchase_order_report" model="report.paperformat">
            <field name="name">Paperformat Purchase Report</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">72</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">71</field>
            <field name="dpi">90</field>
        </record>

        <report
            id="action_purchase_report"
            model="purchase.order"
            string="Purchase Report"
            report_type="qweb-pdf"
            name="nusatama_purchase_extends.purchase_order_report"
            file="nusatama_purchase_extends.purchase_order_report"
            paperformat="nusatama_purchase_extends.paperformat_purchase_order_report"
        />
        
    </data>
    

</odoo>
